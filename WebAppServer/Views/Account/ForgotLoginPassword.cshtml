@using Microsoft.AspNet.Identity

@using (Ajax.BeginForm("ForgotLoginPassword", "Account", new AjaxOptions { UpdateTargetId = "switchLoginModal", HttpMethod = "Post" },
                        new { @class = "" }))
{
    @Html.AntiForgeryToken()
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Восстановление регистрационных данных</h4>
    </div>
    <!-- Основное содержимое модального окна -->
    <div class="modal-body">
        <div class="form-group">
            @Html.Label("email", "Адрес эл. почты:", new {@class = "control-label"})
            <div class="">
                @Html.TextBox("email", null, new {@class = "form-control"})
            </div>
        </div>
        <div>
            <span class="text-info">Укажите ваш адрес электронной почты, указанный при регистрации, и данные вашего аккаунта будут высланы на данный адрес.</span>
        </div>
    </div>
    <!-- Футер модального окна -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
}

