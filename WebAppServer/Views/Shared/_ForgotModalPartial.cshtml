@model WebAppServer.Models.ForgotViewModel

@using (Ajax.BeginForm("ForgotLoginPassword", "Account",null, new AjaxOptions
{
    UpdateTargetId = "switchLoginModal",
    OnSuccess = "FixUnobtrusiveValidate('#switchLoginModal')"
},
    new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <!-- Заголовок модального окна -->
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Восстановление регистрационных данных</h4>
    </div>
    <!-- Основное содержимое модального окна -->
    <div class="modal-body">
        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Адрес эл. почты:", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
            </div>
            <div class="col-sm-12">
                @Html.ValidationMessageFor(m => m.Email, null, new {@class = "text-danger pull-right"})
            </div>
        </div>

        <div>
            <span>Укажите ваш адрес электронной почты, указанный при регистрации, и данные вашего аккаунта будут высланы на данный адрес.</span>
        </div>
    </div>
    <!-- Футер модального окна -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
}

