
<div class="form-group">
    @Html.Label("name", "Имя:", new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.TextBox("name", null, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.Label("password", "Пароль:", new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.TextBox("password", null, new { @class = "form-control" })
    </div>
</div>
<div class="col-sm-offset-2">
    @Ajax.ActionLink("Зыбыли имя, пароль?", "ForgotLoginPassword", "Account",
                                new AjaxOptions { UpdateTargetId = "switchLoginModal" })
</div>